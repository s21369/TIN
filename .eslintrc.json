{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "quotes": ["error", "double"],
        "indent": ["error", 4],
        "no-alert": "off",
        "no-plusplus": "off",
        "semi": ["error", "always"]
    }
}
